app:
  env: "production"
  sanic:
    app:
      secret: "SuperSecretKey"
    blueprints:
      - reader
      - login
      - writer
    
  authentication:
    path: "./path/to/db.db"
    salt: saltyUSers00
    max_age: 3600
    users:
      - username: someone
        password: YourPassword
        auth_level: 
          - admin
      - username: someoneElse
        password_sha256: YourSha256
        auth_level: 
          - admin
    restrictions:
      - tree: treeName
        blueprint: reader
        auth_level: 
          - admin 

  trees:
    topics:
      name: topics
      path: "./path/to/db.db"
      permanent: True
      replace: False
      read_only: False
      data: "./path/to/data/file.jl"
      indexes:
        - fieldName0
        - fieldName1
        - fieldName2
        - fieldName3

    audiences:
      name: audiences
      path: "./path/to/db.db"
      permanent: True
      replace: False
      read_only: False
      data: "./path/to/data/file.jl"
      indexes:
        - fieldName0
        - fieldName1
        - fieldName2
        - fieldName3

    locations:
      name: locations
      path: "./path/to/db.db"
      permanent: True
      replace: False
      read_only: False
      data: "./path/to/data/file.jl"
      indexes:
        - fieldName0
        - fieldName1
        - fieldName2
        - fieldName3

  logging:
    version: 1
    disable_existing_loggers: False
    formatters:
      simple: 
        class: logging.Formatter
        format: "[%(asctime)s][%(name)s][%(process)d][%(levelname)s] | %(message)s"
        datefmt: "%d-%m-%Y %H:%M:%S"
    handlers:
      stream:
        class: logging.StreamHandler
        level: INFO
        formatter: simple
        stream: ext://sys.stdout

      error_stream:
        class: logging.StreamHandler
        level: INFO
        formatter: simple
        stream: ext://sys.stderr

      error_file:
        class: logging.FileHandler
        level: ERROR
        formatter: simple
        filename: ./volume/log/errors.log

      access_file:
        class: logging.FileHandler
        level: INFO
        formatter: simple
        filename: ./volume/log/log.log

    loggers:
      endpointAccess:
        level: INFO
        handlers: [error_stream, error_file, access_file]
        propagate: True





